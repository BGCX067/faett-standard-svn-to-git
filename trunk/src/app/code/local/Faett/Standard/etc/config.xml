<config>
    <modules>
        <Faett_Standard>
            <version>${version}</version>
        </Faett_Standard>
    </modules>
    <global>
        <resources>
            <standard_setup>
                <setup>
                    <module>Faett_Standard</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </standard_setup>
            <standard_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </standard_write>
            <standard_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </standard_read>
        </resources>
        <helpers>
            <basic>
                <class>Faett_Standard_Helper</class>
            </basic>
        </helpers>
    </global>
</config>